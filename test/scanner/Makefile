# Odds: test/scanner Makefile
#  - builds the tokenize executable for printing scanned tokens from stdin

OCAMLC=ocamlc
OBJS = ../../compiler/scanner.cmo tokenize.cmo
INCLUDES = -I ../../compiler

default: tokenize

all:
	cd ..; make all

tokenize: $(OBJS)
	$(OCAMLC) $(INCLUDES) -o tokenize $(OBJS)

%.cmo: %.ml
	$(OCAMLC) $(INCLUDES) -c $<

%.cmi: %.mli
	$(OCAMLC) $(INCLUDES) -c $<

.PHONY: clean
clean:
	rm -f tokenize *.cmo *.cmi

# Generated by ocamldep *.ml *.mli
tokenize.cmo: ../../compiler/tokens.cmi ../../compiler/scanner.cmo
tokenize.cmx: ../../compiler/tokens.cmi ../../compiler/scanner.cmx
../../compiler/tokens.cmi:
